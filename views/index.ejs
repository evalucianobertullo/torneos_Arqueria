<div class="row justify-content-center">
  <div class="col-md-8 text-center">
    <h1 class="display-4 mb-4">Bienvenido a Torneos de Arquería</h1>
    <p class="lead">Plataforma para la gestión de torneos de arquería</p>
    
    <div class="mt-5">
      <% if(typeof user === 'undefined' || !user) { %>
        <div class="d-grid gap-2 col-md-6 mx-auto">
          <a href="/login" class="btn btn-primary btn-lg mb-3">
            <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
          </a>
          <a href="/register" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-user-plus me-2"></i> Registrarse
          </a>
        </div>
      <% } else { %>
        <div class="d-grid gap-2 col-md-6 mx-auto">
          <a href="/dashboard" class="btn btn-primary btn-lg">
            <i class="fas fa-tachometer-alt me-2"></i> Ir al Panel
          </a>
        </div>
      <% } %>
    </div>
  </div>
</div> 