<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h2 class="h4 mb-0"><i class="fas fa-plus-circle me-2"></i> Crear Nuevo Torneo</h2>
      </div>
      <div class="card-body">
        <form action="/torneos/crear" method="POST">
          <!-- Nombre del torneo -->
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre del Torneo</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-trophy"></i></span>
              <input type="text" class="form-control" id="nombre" name="nombre" 
                    placeholder="Torneo de Arquería" value="Torneo">
            </div>
            <small class="text-muted">Si lo dejas en blanco, se usará "Torneo" por defecto</small>
          </div>
          
          <!-- Fecha del torneo -->
          <div class="mb-3">
            <label for="fecha" class="form-label">Fecha del Torneo</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
              <input type="date" class="form-control" id="fecha" name="fecha" 
                    value="<%= new Date().toISOString().split('T')[0] %>">
            </div>
            <small class="text-muted">Si no seleccionas fecha, se usará la fecha actual</small>
          </div>
          
          <!-- Distancia del torneo -->
          <div class="mb-3">
            <label for="distancia" class="form-label">Distancia de Tiro</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-ruler-horizontal"></i></span>
              <select class="form-select" id="distancia" name="distancia" required>
                <option value="5m">5 metros</option>
                <option value="10m">10 metros</option>
                <option value="18m" selected>18 metros</option>
                <option value="30m">30 metros</option>
                <option value="70m">70 metros</option>
              </select>
            </div>
            <small class="text-muted">Distancia de tiro para este torneo</small>
          </div>
          
          <!-- Configuración del torneo -->
          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <label for="flechasPorTirada" class="form-label">Flechas por Ronda</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-arrows-alt"></i></span>
                <input type="number" class="form-control" id="flechasPorTirada" name="flechasPorTirada" 
                      min="1" value="3" required>
              </div>
              <small class="text-muted">Cantidad de flechas que dispara cada arquero por tirada</small>
            </div>
            <div class="col-md-6">
              <label for="rondas" class="form-label">Cantidad de Rondas</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-sync-alt"></i></span>
                <input type="number" class="form-control" id="rondas" name="rondas" 
                      min="1" value="10" required>
              </div>
              <small class="text-muted">Número de rondas que tendrá el torneo</small>
            </div>
          </div>
          
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> Una vez creado el torneo, podrás agregar participantes.
          </div>
          
          <div class="d-flex justify-content-between mt-4">
            <a href="/torneos" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left me-2"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-2"></i> Crear Torneo
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div> 